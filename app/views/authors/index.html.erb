<p id="notice"><%= notice %></p>

<h1>Authors</h1>
<table>
  <thead>
    <tr class=author_bg>
      <th>ID</th>
      <th>Name</th>
      <th>Photo</th>
      <th>Favorite</th>
      <th>Bio</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @authors.each do |author| %>
      <tr>
        <td class=center_text><%= author.id %></td>
        <td><%= author.name %>  </td>
        <td><%= image_tag author.photo.url , class: "thumbnail" %>
        <td><%= author.favorite %></td>
        <td><%= author.bio %></td>
        

        <td class=center_text><%= link_to 'Show', author %></td>
        <td class=center_text><%= link_to 'Edit', edit_author_path(author) %></td>
        <td class=center_text><%= link_to 'Destroy', author, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

